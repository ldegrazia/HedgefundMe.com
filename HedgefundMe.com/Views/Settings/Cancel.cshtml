@using HedgefundMe.com.ViewModels
@using PagedList.Mvc
@using HedgefundMe.com;
@model SettingsViewModel 
@{
    ViewBag.Title = "Cancel";
}
<div class="container rounded">
    <div class="row blue">
        <div class="col-sm-12" style="color:white;">
            <img class="pull-left smallimg" title="Current Blotter" alt="Current Blotter" src="@Url.Content("~/images/history.png")" />
            <h4>&nbsp;&nbsp;Cancel a Trade</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>
                <h2><span class="result" style="background-color:yellow;">@ViewBag.Result</span></h2>
            </p>
            <h4>All Trades</h4>
            <p>
                @Html.PagedListPager(Model.Data, page => Url.Action("Cancel", new { page }))
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">


              
                <table class="table table-striped table-hover table-bordered">
                    <tr>
                        <th>
                           TradeIdOpen 
                        </th>

                        <th>
                              Ticker 
                        </th>
                        <th>
                             Side 
                        </th>
                        <th>
                            Open Action 
                        </th>
                        <th>
                           Open Price 
                        </th>
                        <th>
                            Open Date
                        </th>

                        <th>
                         State 
                        </th>
                        <th>Action</th>
                    </tr>

                    @foreach (var item in Model.Data)

                    {  
                        @Html.HiddenFor(model => item.TradeIdOpen)
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TradeIdOpen)
                        </td>
                     
                        <td>
                            @Html.DisplayFor(modelItem => item.Ticker)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Side)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OpenAction)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OpenPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OpenDate)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                             
                            <a href="/Settings/Cancel?id=@item.TradeIdOpen&page=page" class="btn btn-danger btn-sm">Cancel</a>

                        </td>
                    </tr>
                    }

                </table>
 
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>
                @Html.PagedListPager(Model.Data, page => Url.Action("Cancel", new { page }))
            </p>



        </div>
    </div>

</div>