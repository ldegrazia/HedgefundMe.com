        <div class="col-sm-12" style="color:white;">
            <img class="pull-left smallimg" title="Trading Settings" alt="Trading Settings" src="@Url.Content("~/images/tools.png")" />
            <h4>&nbsp;&nbsp;@Html.DisplayFor(model => model.Name)</h4>
        </div>
    </div>
    <div class="row">

        <div class="col-md-12">

            <h4>Settings Overview</h4>
            <div class="display-label">
