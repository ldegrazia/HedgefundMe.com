            </div>
            <h4>Trading Behavior</h4>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.TargetPriceChangeLong)
            
                @Html.DisplayFor(model => model.TargetPriceChangeLong)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.TargetPriceChangeShort)
             
                @Html.DisplayFor(model => model.TargetPriceChangeShort)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.SellStopChange)
            
                @Html.DisplayFor(model => model.SellStopChange)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.BuyStopChange)
           
