                @Html.DisplayFor(model => model.Enabled)
            </div> 

            <div class="display-label">
                @Html.DisplayNameFor(model => model.Rating)
                @Html.DisplayFor(model => model.Rating)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.AvgReturn)

                @Html.DisplayFor(model => model.AvgReturn)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.Date)
            
                @Html.DisplayFor(model => model.Date)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.CreatedBy)
          
                @Html.DisplayFor(model => model.CreatedBy)
            </div>
            <h4>Market Data</h4>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.LastDataLoad)
           
                @Html.DisplayFor(model => model.LastDataLoad)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.MinimumShortVolume)
            
                @Html.DisplayFor(model => model.MinimumShortVolume)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.MinimumLongVolume)
          
                @Html.DisplayFor(model => model.MinimumLongVolume)
            </div>
            <h4>Trading Signals</h4>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.LastSignalRun)
            
                @Html.DisplayFor(model => model.LastSignalRun)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.GoodPriceChange)
            
                @Html.DisplayFor(model => model.GoodPriceChange)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.BadPriceChange)
            
                @Html.DisplayFor(model => model.BadPriceChange)
            </div>
