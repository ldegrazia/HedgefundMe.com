@model HedgefundMe.com.Models.TradingSettings

@{
    ViewBag.Title = "Edit Trading Settings";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="container rounded">
    <div class="row blue">
        <div class="col-sm-12" style="color:white;">
            <img class="pull-left smallimg" title="Edit Trading Setting" alt="Edit Trading Setting" src="@Url.Content("~/images/tools.png")" />  
            <h4>&nbsp;&nbsp;Edit Trading Setting</h4>
        </div>
    </div>
    <div class="row">

        <div class="col-md-12">
            <p>
                <h2><span class="result" style="background-color:yellow;">@ViewBag.Result</span></h2>
            </p>
            @using (Html.BeginForm("Edit", "Settings", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @Html.HiddenFor(model => model.ID)
                 @Html.HiddenFor(model => model.Date) 
 @Html.HiddenFor(model => model.LastDataLoad)
                  @Html.HiddenFor(model => model.LastSignalRun) 
                <h4>Settings Overview</h4>
                <div class="control-group">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Name)
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>

                </div>
                <div class="control-group">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Enabled)
                        @Html.EditorFor(model => model.Enabled)
                        @Html.ValidationMessageFor(model => model.Enabled)
                    </div>
                </div>
                <div class="control-group">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Rating)

                        @Html.EditorFor(model => model.Rating)
                        @Html.ValidationMessageFor(model => model.Rating)
                    </div>
                </div>
                 <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.AvgReturn) 
            @Html.EditorFor(model => model.AvgReturn)
            @Html.ValidationMessageFor(model => model.AvgReturn)
        </div>
      </div>
     
    <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.CreatedBy) 
            @Html.EditorFor(model => model.CreatedBy)
            @Html.ValidationMessageFor(model => model.CreatedBy)
        </div>
    </div>
   <h4>Market Data</h4>
    <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.MinimumShortVolume) 
            @Html.EditorFor(model => model.MinimumShortVolume)
            @Html.ValidationMessageFor(model => model.MinimumShortVolume)
        </div>
    </div>
    <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.MinimumLongVolume) 
            @Html.EditorFor(model => model.MinimumLongVolume)
            @Html.ValidationMessageFor(model => model.MinimumLongVolume)
        </div>
    </div>
     <h4>Trading Signals</h4>
    <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.GoodPriceChange) 
            @Html.EditorFor(model => model.GoodPriceChange)
            @Html.ValidationMessageFor(model => model.GoodPriceChange)
        </div>

    </div>
    <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.BadPriceChange) 
            @Html.EditorFor(model => model.BadPriceChange)
            @Html.ValidationMessageFor(model => model.BadPriceChange)
        </div>

    </div>
                 <h4>Account Settings</h4>
    <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.DollarAmount) 
            @Html.EditorFor(model => model.DollarAmount)
            @Html.ValidationMessageFor(model => model.DollarAmount)
        </div>

    </div>
    <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.MaxBlotterValue) 
            @Html.EditorFor(model => model.MaxBlotterValue) 
        </div>

    </div>
                 <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.CommissionCostPerShare) 
            @Html.EditorFor(model => model.CommissionCostPerShare)
         
        </div>

    </div>
                  <h4>Trading Behavior</h4>
    <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.TargetPriceChangeLong) 
            @Html.EditorFor(model => model.TargetPriceChangeLong)
            @Html.ValidationMessageFor(model => model.TargetPriceChangeLong)
        </div>

    </div>
    <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.TargetPriceChangeShort) 
            @Html.EditorFor(model => model.TargetPriceChangeShort)
            @Html.ValidationMessageFor(model => model.TargetPriceChangeShort)
        </div>

    </div>
    <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.SellStopChange) 
            @Html.EditorFor(model => model.SellStopChange)
            @Html.ValidationMessageFor(model => model.SellStopChange)
        </div>

    </div>
    <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.BuyStopChange) 
            @Html.EditorFor(model => model.BuyStopChange)
            @Html.ValidationMessageFor(model => model.BuyStopChange)
        </div>

    </div>
    <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.ReEnterWinningTrades) 
            @Html.EditorFor(model => model.ReEnterWinningTrades)
            @Html.ValidationMessageFor(model => model.ReEnterWinningTrades)
        </div>

    </div>
    <div class="control-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.SameLosingTradeMaximum) 
            @Html.EditorFor(model => model.SameLosingTradeMaximum)
            @Html.ValidationMessageFor(model => model.SameLosingTradeMaximum)
        </div>

    </div>
   
    <div>
        <p>
            <input type="submit" class="btn btn-warning" value="Save" />
            <a href="/Settings/Index" class="btn btn-default">Back To List</a>
        </p>
    </div>
            }


        
            </div>

</div>
    </div>
