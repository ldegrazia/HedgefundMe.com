@if(Request.IsAuthenticated) 
{
    <img src="@Url.Action("ProfileImage", "Account")" height="50" width="50" style="vertical-align:middle" alt="profile photo" /> 
    @Html.ActionLink(User.Identity.Name, "MyAccount", "Account", routeValues: null, htmlAttributes: new { data_icon = "gear" })
