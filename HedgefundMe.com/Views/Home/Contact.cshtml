@model HedgefundMe.com.Models.ContactModel
@{
    ViewBag.Title = "Contact Us";
}
   <div class="container rounded" style="margin-bottom:10px;">
    <div class="row" style="background-color: #1b2e48; ">
        <div class="col-sm-12" style="color:white;">
            <h2>Contact Us</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <p>

                <ul>
                    <li>We welcome feedback both postive and negative.</li>
                    <li>Be sure to include the correct information so we can respond.</li>
                    <li>All requests are logged and your request is handled within 12 hours.</li>
                    <li>
                        <em>For account concerns, please be as specific as possible so we can take action quickly.</em>
                    </li>

                </ul>

            </p>
            @using (Html.BeginForm("Contact", "Home", null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                    <!-- Text input-->
                <div class="control-group">
                    <label class="control-label" for="FirstName">First Name:</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.FirstName)<br/>
                        @Html.ValidationMessageFor(model => model.FirstName)

                    </div>
                </div>

        <!-- Text input-->
                <div class="control-group">
                    <label class="control-label" for="lastname">Last Name:</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.LastName)<br/>
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                </div>
                 <!-- Text input-->
                <div class="control-group">
                    <label class="control-label" for="Email">Email</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.Email)<br/>
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
        <!-- Textarea -->
                <div class="control-group">
                    <label class="control-label" for="Message">Your Message:</label>
                    <div class="controls">
                        @Html.TextAreaFor(model => model.Message)<br/>
                        @Html.ValidationMessageFor(model => model.Message)
                    </div>
                </div>

        <!-- Button -->
                <div class="control-group">
                    <label class="control-label" for="submit"> </label>
                    <div class="controls">
                        <button id="submit" name="submit" class="btn btn-primary">Send Message</button>
                    </div>
                </div>
                <br />
            }
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
 